@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<div>
    <div class="container d-flex p-2">
        <h1>Category list</h1>
        <div style="text-align: right; flex-grow: 1;">
            <a asp-controller="Category" asp-action="Create" class="btn btn-secondary">Add category</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                </tr>
            </thead>

            <tbody> 
                @foreach (var category in @Model)
                {
                    <tr style="vertical-align: middle;">
                        <td style="width: 20%;">
                            @category.Id
                        </td>
                        <td style="width: 60%;">
                            @category.Name
                        </td>
                        <td style="width: 20%;" class="p-3">
                            <a asp-controller="Category" asp-action="Update" asp-route-Id=@category.Id class="btn btn-success mx-2">Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-Id=@category.Id class="btn btn-danger mx-2">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>Not found</h2>
    }
</div>