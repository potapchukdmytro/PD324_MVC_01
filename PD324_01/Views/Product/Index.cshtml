@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<div>
    <div class="container d-flex p-2">
        <h1>Product list</h1>
        <div style="text-align: right; flex-grow: 1;">
            <a asp-controller="Product" asp-action="Create" class="btn btn-secondary">Add product</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Category
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var product in @Model)
                {
                    <tr style="vertical-align: middle;">
                        <td style="width: 2%;">
                            @product.Id
                        </td>
                        <td style="width: 18%;">
                            @product.Name
                        </td>
                        <td style="width: 20%;">
                            @product.Description
                        </td>
                        <td style="width: 10%;">
                            @product.Price
                        </td>
                        <td style="width: 20%; text-align: center">
                            <img width="100px" src="~/images/products/@product.Image" alt="@product.Name" />
                        </td>
                        <td style="width: 10%;">
                            @(product.Category == null ? "notfound" : product.Category.Name)
                        </td>
                        <td style="width: 20%;" class="p-3">
                            <a asp-controller="Product" asp-action="Update" asp-route-Id=@product.Id class="btn btn-success mx-2">Edit</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-Id=@product.Id class="btn btn-danger mx-2">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>Products not found</h2>
    }
</div>