@model PD324_01.Models.ViewModels.CreateProductVM

<h1>Create product</h1>

<form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="Create">
    <div class="form-group" style="width: 40%">
        <label asp-for="Product.Name" class="m-1">Name</label>
        <input asp-for="Product.Name" class="form-control m-1" placeholder="Enter name">
    </div>
    <div class="form-group" style="width: 40%">
        <label asp-for="Product.Description" class="m-1">Description</label>
        <input asp-for="Product.Description" class="form-control m-1" placeholder="Enter description">
    </div>
    <div class="form-group" style="width: 40%">
        <label asp-for="Product.Price" class="m-1">Price</label>
        <input asp-for="Product.Price" class="form-control m-1" placeholder="Enter price">
    </div>
    <div class="form-group" style="width: 40%">
        <label asp-for="Product.CategoryId" class="m-1">Category</label>
        <select asp-items="Model.ListItems" asp-for="Product.CategoryId" class="form-control m-1">
            <option disabled selected></option>
        </select>
    </div>
    <div class="form-group" style="width: 40%">
        <label asp-for="Product.Image" class="m-1">Image</label>
        <input type="file" class="form-control m-1" name="files" />
    </div>
    <button type="submit" class="btn btn-primary m-2">Submit</button>
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary m-2">Back</a>
</form>